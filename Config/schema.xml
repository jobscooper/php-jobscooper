    <table name="user_keyword_set" phpName="UserKeywordSet" allowPkInsert="true" isCrossRef="true" reloadOnUpdate="true">
        <column name="user_id" phpName="UserId" type="integer" required="true" primaryKey="true"/>
        <foreign-key foreignTable="user" onDelete="cascade" phpName="UserFromUKS">
            <reference local="user_id" foreign="user_id"/>
        </foreign-key>

        <column name="user_keyword_set_id" phpName="UserKeywordSetId" type="integer" required="true"
                autoIncrement="true" primaryKey="true"/>

        <column name="keywords" phpName="Keywords" type="array" required="true"/>
        <unique>
            <unique-column name="user_id"/>
            <unique-column name="keywords" size="10"/>
        </unique>

        <column name="search_key_from_config" phpName="SearchKeyFromConfig" type="varchar" size="50" required="true"/>
        <unique>
            <unique-column name="search_key_from_config"/>
        </unique>

        <column name="keyword_tokens" phpName="KeywordTokens" type="array"/>

        <column name="user_keyword_set_key" phpName="UserKeywordSetKey" type="varchar" size="128" required="true"
                primaryString="true"/>
        <behavior name="sluggable">
            <parameter name="slug_column" value="user_keyword_set_key"/>
            <parameter name="slug_pattern" value="user{UserId}_kwd{UserKeywordSetId}_search{SearchKeyFromConfig}"/>
            <parameter name="replace_pattern" value="/[^\w\/]+/u"/>
            <parameter name="replacement" value=""/>
            <parameter name="separator" value="_"/>
