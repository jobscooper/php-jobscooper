{
  "AgentName": "DotJobs",
  "BaseURL": "http://www.my.jobs",
  "SourceURL": "http://www.my.jobs/jobs/?location=***LOCATION***&q=***KEYWORDS***",
  "LocationType": "location-city-comma-state",
  "CountryCodes" : ["US"],
  "PluginExtendsClassName" : "AbstractDotJobs",
  "nMaxJobsToReturn" : 3000,
  "Collections": [
    {
      "Name": "PageFields",
      "Fields": [
        {
          "Name": "TotalPostCount",
          "Selector": "h3.direct_highlightedText",
          "Extract": "REGEX",
          "Pattern": "/.*?([,\\d]+)\\s*[Jj]obs/",
          "Type": "CSS"
        },
        {
          "Name": "JobPostItem",
          "Selector": "ul.default_jobListing li",
          "Extract": "CSS",
          "Attribute": "collection",
          "Type": "CSS"
        }
      ]
    },
    {
      "Name": "ItemFields",
      "Fields": [
        {
          "Name": "Title",
          "Selector": "h4 a span",
          "Extract": "TEXT",
          "Attribute": "plaintext",
          "Type": "CSS"
        },
        {
          "Name": "Url",
          "Selector": "h4 a ",
          "Extract": "ATTR",
          "Attribute": "href",
          "Index": 0,
          "Type": "CSS"
        },
        {
          "Name": "LocationFromSource",
          "Selector": "div span[itemprop='address']",
          "Index" : 0,
          "Extract": "CSS",
          "Attribute": "collection",
          "Type": "CSS",
          "Callback": "combineTextAllNodes"
        },
        {
          "Name": "Company",
          "Selector": "div span b",
          "Index" : 0,
          "Extract": "TEXT",
          "Attribute": null,
          "Type": "CSS"
        },
        {
          "Name": "JobSitePostId",
          "Pattern": "/\\/([\\w\\d]+)\\/job/",
          "Extract": "REGEX",
          "Type": "REGEX",
          "Field": "job_post_url"
        }
      ]
    }
  ],
  "Pagination": {
    "Type": "LOAD-MORE",
    "Selector": "#button_moreJobs",
    "PageLimit": 20
  }
}