{
  "AgentName": "Salesforce",
  "SourceURL": "http://salesforce.careermount.com/candidate/job_search/quick/results?location=***LOCATION***&keyword=***KEYWORDS***&sort_dir=desc&sort_field=post_date",
  "LocationType": "location-city",
  "Collections": [
    {
      "Name": "PageFields",
      "Fields": [
        {
          "Name": "NoPostsFound",
          "Selector": "div.main p b",
          "Extract": "TEXT",
          "Index" : 0,
          "Callback" : "matchesNoResultsPattern",
          "CallbackParameter": "no jobs found",
          "Attribute": null,
          "Type": "CSS"
        },
        {
          "Name": "TotalPostCount",
          "Selector": "td.td-result",
          "Extract": "REGEX",
          "Pattern": "/.*? of (\\d+).*/",
          "Attribute": null,
          "Type": "CSS"
        },
        {
          "Name": "JobPostItem",
          "Selector": ".s-res",
          "Extract": "CSS",
          "Attribute": "collection",
          "Type": "CSS"
        }
      ]
    },
    {
      "Name": "ItemFields",
      "Fields": [
        {
          "Name": "Title",
          "Selector": "h3 a",
          "Extract": "TEXT",
          "Attribute": null,
          "Type": "CSS"
        },
        {
          "Name": "Url",
          "Selector": "h3 a",
          "Extract": "ATTR",
          "Attribute": "href",
          "Index": 0,
          "Type": "CSS"
        },
        {
          "Name": "Company",
          "Value": "Salesforce",
          "Type": "STATIC"
        },
        {
          "Name": "JobSite",
          "Value": "Salesforce",
          "Type": "STATIC"
        },
        {
          "Name": "LocationFromSource",
          "Selector": "p.search-result-item-company-name a",
          "Extract": "ATTR",
          "Attribute": "collection",
          "Type": "CSS",
          "Callback": "combineTextAllNodes"
        },
        {
          "Name": "department",
          "Selector": "table.searchResAdd tr td a",
          "Index" : 1,
          "Extract": "TEXT",
          "Attribute": null,
          "Type": "CSS",
          "JoinResult": true
        },

        {
          "Name": "JobSitePostId",
          "Pattern": "/.*?([0-9]+).*/",
          "Extract": "REGEX",
          "Type": "REGEX",
          "Field": "job_post_url"
        },
        {
          "Name": "PostedAt",
          "Selector": "span.search-result-item-post-date",
          "Extract": "REGEX",
          "Pattern": "/Date posted:\\s*([\\d\\/]+)/",
          "Type": "CSS"
        }
      ]
    }
  ],
  "Pagination": {
    "Type": "page-via-url",
    "PageLimit": 10
  }
}